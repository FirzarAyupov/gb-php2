    "php": "^8.0",
    "ext-pdo": "*",
    "symfony/polyfill-uuid": "^1.26",
    "ext-mbstring": "*",
    "psr/container": "^2.0",
    "monolog/monolog": "^2.8",
    "vlucas/phpdotenv": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "GeekBrains\\": "src/"
    },
    "autoload-dev": {
